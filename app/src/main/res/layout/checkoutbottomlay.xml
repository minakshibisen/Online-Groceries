<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/text_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/gilroy_bold"
            android:text="Checkout"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close"
            app:tint="@color/black" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/search_bg_color" />

    <RelativeLayout
        android:layout_marginVertical="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/gilroy_bold"
            android:text="Delivery"
            android:layout_centerVertical="true"
            android:textColor="@color/text_label_black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/text_select_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_toLeftOf="@id/img_next"
            android:fontFamily="@font/gilroy_bold"
            android:text="Select Method"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/baseline_navigate_next_24"
            app:tint="@color/black" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/search_bg_color" />

    <RelativeLayout
        android:layout_marginVertical="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/gilroy_bold"
            android:text="Payment"
            android:layout_centerVertical="true"
            android:textColor="@color/text_label_black"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/img_payment_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toLeftOf="@id/img_next1"
            android:src="@drawable/payment_card" />


        <ImageView
            android:id="@+id/img_next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/baseline_navigate_next_24"
            app:tint="@color/black" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/search_bg_color" />

    <RelativeLayout
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_promo_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/gilroy_bold"
            android:text="Promo Code"
            android:layout_centerVertical="true"
            android:textColor="@color/text_label_black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/text_pick_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_toLeftOf="@id/img_next2"
            android:fontFamily="@font/gilroy_bold"
            android:text="Pick Discount"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/img_next2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/baseline_navigate_next_24"
            app:tint="@color/black" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/search_bg_color" />

    <RelativeLayout
        android:layout_marginVertical="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_fruit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/gilroy_bold"
            android:text="Total Cost"
            android:layout_centerVertical="true"
            android:textColor="@color/text_label_black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/text_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_toLeftOf="@id/img_next3"
            android:fontFamily="@font/gilroy_bold"
            android:text="$13.97"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/img_next3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/baseline_navigate_next_24"
            app:tint="@color/black" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_medium"
        android:text="@string/by_placing_an_order_you_agree_to_our_terms_and_conditions"
        android:textColor="@color/text_label_black"
        android:textSize="@dimen/_12sdp"
        android:padding="@dimen/_15sdp"/>
    <TextView
        android:id="@+id/btn_place_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/custom_bg_btn"
        android:gravity="center"
        android:padding="@dimen/_14sdp"
        android:text="Place Order"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />

</LinearLayout>