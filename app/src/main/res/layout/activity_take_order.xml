<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TakeOrderActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_img" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_below="@id/header"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:layout_marginTop="-100dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/success" />

    <TextView
        android:id="@+id/txt_summery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center"
        android:layout_below="@id/animation_view"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Your Order has been accepted"
        android:textColor="@color/text_black"
        android:textFontWeight="500"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:layout_below="@id/txt_summery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Your items has been placed and is on itâ€™s way to being processed"
        android:textColor="@color/text_label_black"
        android:textFontWeight="500"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/text_btn_take_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:background="@drawable/custom_bg_btn"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:padding="@dimen/_14sdp"
        android:layout_above="@id/text_back_home"
        android:text="Track Order"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />


    <TextView
        android:id="@+id/text_back_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/gilroy_bold"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Back To Home"
        android:layout_marginBottom="@dimen/_50sdp"
        android:textColor="@color/text_black"
        android:textFontWeight="500"
        android:textSize="@dimen/_14sdp" />

</RelativeLayout>