<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:padding="@dimen/_20sdp"
        app:tint="@color/text_black" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_gravity="center"
        android:src="@drawable/img_shop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center"
        android:text="Oops ! Order Failed"
        android:textColor="@color/text_black"
        android:textFontWeight="500"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center"
        android:text="Something went tembly wrong."
        android:textColor="@color/text_label_black"
        android:textFontWeight="500"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/text_btn_take_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/custom_bg_btn"
        android:gravity="center"
        android:padding="@dimen/_14sdp"
        android:text="Please Try Again"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />




</LinearLayout>